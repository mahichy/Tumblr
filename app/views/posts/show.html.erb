<h1 class="title">
  <%= @post.title%>
</h1>

<p class="date">
  Submited <%= time_ago_in_words(@post.created_at) %> ago
   <%if user_signed_in? %> 
    <%= link_to "Edit", edit_post_path(@post)%> |
    <%= button_to("Delete", post_path, class: "btn btn-link", form: { data: { turbo_confirm: "Are you sure?" } },  method: :delete ) %>
    <% end %>
</p>

<p class="body">
  <%= @post.body%>
</p>

<div class="comment">
  <h2><%= @post.comments.count%> Comments </h2>
  <%= render @post.comments %>

  <h3>Join Discussion: </h3>
  <%= render "comments/form"%>
</div>

<%= link_to "All Post", root_path%>